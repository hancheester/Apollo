@model IList<ProductBoxModel>
@using Apollo.FrontStore.Models.Product;

@if (Model.Count > 0)
{
    <div id="recently-view-items">
        <div class="container">
            <h6>Your viewed items</h6>
            <div class="items">
                <div class="owl-carousel owl-theme">
                    @foreach (var item in Model)
                    {
                        @Html.Partial("_ProductBox", item, new ViewDataDictionary { { "remove-viewed-item", true } })   
                    }
                </div>
            </div>
        </div>
    </div>
}