@using Apollo.FrontStore.Models.Blog;
@model IList<BlogPostYearModel>

@if (Model.Count > 0)
{
    <div class="blog-archive">
        <div class="title">
            <strong>Archive</strong>
        </div>
        <div class="listbox">
            <ul class="list" id="blog-month-list">
                @foreach (var yearItem in Model)
                {
                    <li class="year">
                        <strong class="number">@(yearItem.Year)</strong>
                        <ul class="sublist" id="blog-year-@(yearItem.Year)">
                            @foreach (var monthItem in yearItem.Months)
                            {
                                <li class="month">
                                    <a href="@Url.RouteUrl("Blog By Month", new { month = yearItem.Year + "-" + monthItem.Month })">
                                        @(new DateTime(yearItem.Year, monthItem.Month, 1).ToString("MMMM"))
                                    (@(monthItem.BlogPostCount))
                                </a>
                            </li>
                            }
                        </ul>
                    </li>
                }
            </ul>
        </div>
    </div>
}