@using Apollo.FrontStore.Models.Common;
@model IList<BannerModel>

@if (Model.Count > 0)
{
    <amp-carousel width="1170"
                  height="550"
                  layout="responsive"
                  type="slides"
                  autoplay
                  delay="5000">

        @for (int i = 0; i < Model.Count; i++)
        {
            <div>
                <a href="@Model[i].Link">
                    <amp-img src="@Url.GenerateAbsoluteUrl(Model[i].Picture.ImageUrl)" 
                             alt="@Model[i].Picture.AlternateText" 
                             width="1170"
                             height="550" 
                             title="@Model[i].Picture.Title" 
                             layout="responsive"></amp-img>
                </a>
            </div>
        }

    </amp-carousel>
}
